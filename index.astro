        </button>

        <div class="sidebar" id="sidebar">
            <div class="sidebar-tabs">
                <div class="sidebar-tab active" data-tab="models">Models</div>
                <div class="sidebar-tab" data-tab="upload">Upload</div>
                <div class="sidebar-tab" data-tab="settings">Settings</div>
            </div>
            
            <div class="sidebar-content">
                <!-- Models Tab -->
                <div class="sidebar-section active" id="models-section">
                    <div class="model-selector">
                        <div class="section-title">Available Models</div>
                        <div class="model-buttons" id="model-buttons">
                            {rootModels.map(modelFile => {
                                const modelName = modelFile.replace(/\.(glb|gltf)$/i, '');
                                const displayModelName = modelName.replace(/[-_]/g, ' ')
                                  .split(' ')
                                  .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
                                  .join(' ');
                                return (
                                  <button class="model-btn" data-model={modelFile}>
                                    {displayModelName}
                                  </button>
                                );

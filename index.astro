import StarlightNav from '../../../components/StarlightNav.astro';
import fs from 'fs';
import path from 'path';

// Get root-level models (not in collections)
function getRootModels() {
  const modelsDir = path.join(process.cwd(), 'public', 'models');
  try {
    const items = fs.readdirSync(modelsDir, { withFileTypes: true });
    return items
      .filter(item => item.isFile() && (item.name.endsWith('.glb') || item.name.endsWith('.gltf')))
      .map(file => file.name);
  } catch (error) {
    return [];
  }
}

const rootModels = getRootModels();
